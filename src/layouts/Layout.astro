---
import Nav from "../components/Nav.astro";
import "../styles/global.css"; // Ensure styles are applied
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes">
  <link rel="icon" href="/favicon.svg" type="image/x-icon" />
  <title>{title} | Solve Labs</title>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
  <!-- Header Section -->
  <header class="bg-blue-600 text-white p-6 shadow-lg fixed top-0 left-0 w-full z-50">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <!-- Logo -->
      <a href="..\" class="flex items-end gap-2">
        <img src="/DD_Logo.svg" alt="Logo" class="w-10 h-10 md:w-12 md:h-12  transform scale-130 align-bottom" />
        <img src="/DD_SolveLabs.svg" alt="Logo Text" class="hidden md:inline-block landscape:inline-block w-10 h-10 md:w-12 md:h-12 transform scale-180 ml-4 relative top-[14px]" />
      </a>
        <!-- Navigation -->
      <Nav />  <!-- ✅ Include the Nav component here -->
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow pt-20 px-10 sm:pt-32">
    <slot /> <!-- ✅ This is where page content will go -->
  </main>

 <!-- Footer Section -->
 <footer class="text-white p-6 mt-10" style="background-color: var(--band-color);">
  <div class="max-w-7xl mx-auto flex justify-center gap-10 items-center">
    <a href="//www.x.com" target="_blank" rel="noopener">
      <img src="/images/icons/x.svg" alt="Twitter" class="w-8 h-8 hover:opacity-80" />
    </a>
    <a href="https://linkedin.com" target="_blank" rel="noopener">
      <img src="/images/icons/linkedin.svg" alt="LinkedIn" class="w-8 h-8 hover:opacity-80" />
    </a>
    <a href="https://instagram.com" target="_blank" rel="noopener">
      <img src="/images/icons/instagram.svg" alt="Instagram" class="w-8 h-8 hover:opacity-80" />
    </a>
    <a href="https://github.com/" target="_blank" rel="noopener">
      <img src="/images/icons/github.svg" alt="Github" class="w-8 h-8 hover:opacity-80" />
    </a>
  </div>
</footer>


</body>
</html>

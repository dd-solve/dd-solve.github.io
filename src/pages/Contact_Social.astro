---
import PrivacyPopup from '../components/PrivacyPopup.astro';
import Carousel from '../components/Carousel.astro';
import Nav from "../components/Nav.astro";
import MainLayout from "../layouts/Layout.astro";  // Import the layout
import { getMDContent } from "../utils/loadText.ts";
import { marked } from 'marked';
const ContactContent = await getMDContent("Contact.md", "Contact_Social"); // Load text content from Contact.txt
const Content_html = marked(ContactContent); // Convert Markdown to HTML


const contact_imagePath = "/images/Contacts/social_icons.png"; // Image for this page
---

<MainLayout>
    <body>
         
        <div class="row">
  <div class="rounded-box service-box">
      <button class="header-button"> Contact us </button>
      
    <div set:html={Content_html} class="markdown-content"></div>
    <PrivacyPopup />
  </div>

  <!-- ✅ wrapper must replace Carousel position in the row -->
  <div class="carousel-wrapper">
    <Carousel images={[contact_imagePath]} id="carousel-contacts" />

    <!-- ✅ Only these click zones apply -->
    <a href="https://www.linkedin.com/company/dd-solve-labs" class="click-zone zone1" title="dd-solve -> LinkedIn"></a>
    <a href="https://www.instagram.com/dd_solve/" class="click-zone zone2" title="dd-solve -> Instagram"></a>
    <a href="https://x.com/dd_solve_labs" class="click-zone zone3" title="dd-solve -> X"></a>
    <a href="https://github.com/dd-solve" class="click-zone zone4" title="dd-solve -> Github"></a>
   
  </div>
</div>

    </body>
</MainLayout>